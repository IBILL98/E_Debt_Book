<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MarketSettings.MarketSettingsFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_margin="0dp"
                android:fontFamily="@font/merienda"
                android:paddingStart="40dp"
                android:paddingLeft="40dp"
                android:paddingTop="10dp"
                android:paddingEnd="0dp"
                android:paddingRight="0dp"
                android:paddingBottom="0dp"
                android:text="@string/action_settings"
                android:textColor="#03DAC5"
                android:textSize="22sp" />

            <LinearLayout
                android:id="@+id/market_settings_change_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/mycolor"
                android:clickable="true"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_margin="0dp"
                    android:focusable="true"
                    android:fontFamily="@font/merienda"
                    android:paddingStart="40dp"
                    android:paddingLeft="40dp"
                    android:paddingTop="20dp"
                    android:paddingEnd="0dp"
                    android:paddingRight="0dp"
                    android:paddingBottom="0dp"
                    android:text="Change Name"
                    android:textColor="@android:color/black"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/actuall_name"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_margin="0dp"
                    android:focusable="true"
                    android:fontFamily="@font/merienda"
                    android:paddingStart="40dp"
                    android:paddingLeft="40dp"
                    android:paddingTop="5dp"
                    android:paddingEnd="0dp"
                    android:paddingRight="0dp"
                    android:paddingBottom="0dp"
                    android:text="Actual Name"
                    android:textColor="@android:color/black"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/market_settings_change_language"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/mycolor"
                android:clickable="true"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_margin="0dp"
                    android:focusable="true"
                    android:fontFamily="@font/merienda"
                    android:paddingStart="40dp"
                    android:paddingLeft="40dp"
                    android:paddingTop="15dp"
                    android:paddingEnd="0dp"
                    android:paddingRight="0dp"
                    android:paddingBottom="0dp"
                    android:text="@string/menu_change_language"
                    android:textColor="@android:color/black"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/choosed_language"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_margin="0dp"
                    android:focusable="true"
                    android:fontFamily="@font/merienda"
                    android:paddingStart="40dp"
                    android:paddingLeft="40dp"
                    android:paddingTop="5dp"
                    android:paddingEnd="0dp"
                    android:paddingRight="0dp"
                    android:paddingBottom="0dp"
                    android:text="@string/english"
                    android:textColor="@android:color/black"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/market_settings_change_Adress"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/mycolor"
                android:clickable="true"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_margin="0dp"
                    android:focusable="true"
                    android:fontFamily="@font/merienda"
                    android:paddingStart="40dp"
                    android:paddingLeft="40dp"
                    android:paddingTop="15dp"
                    android:paddingEnd="0dp"
                    android:paddingRight="0dp"
                    android:paddingBottom="0dp"
                    android:text="@string/change_adress"
                    android:textColor="@android:color/black"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/actuall_adress"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_margin="0dp"
                    android:focusable="true"
                    android:fontFamily="@font/merienda"
                    android:paddingStart="40dp"
                    android:paddingLeft="40dp"
                    android:paddingTop="5dp"
                    android:paddingEnd="0dp"
                    android:paddingRight="0dp"
                    android:paddingBottom="0dp"
                    android:text="Actual Adress"
                    android:textColor="@android:color/black"
                    android:textSize="18sp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>